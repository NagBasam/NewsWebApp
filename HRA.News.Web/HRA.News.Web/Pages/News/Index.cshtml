@page
@model HRA.News.Web.Pages.News.IndexModel
@{
}
@{
    ViewData["Title"] = "Home page";
}

<style>
    .btn {
        width: 75px;
    }
</style>

<div class="card-deck">
    @foreach (var Article in Model.Articles)
    {
        <div class="card col-m-3" style="min-width: 18rem; max-width:30.5%;margin-bottom:15px">
            <a asp-page="/News/Details" asp-route-ID="@Article.Id" asp-route-language="@Article.Language">
                <img class="card-img-top imageThumbnail" src=@Article.UrlToImage
                     asp-append-version="true" />
            </a>
            <div class="card-body">
                <a asp-page="/News/Details" asp-route-ID="@Article.Id" class="card-title col-m-3">@Article.Title</a>
                <p class="card-text">@Article.PublishedAt</p>
            </div>
        </div>
    }
</div>